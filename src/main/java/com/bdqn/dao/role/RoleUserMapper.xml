<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bdqn.dao.role.RoleUserMapper">
    <select id="findRoleBytUserID" parameterType="integer" resultType="Role">
        select r.*
        from role_user ru, role r
        WHERE ru.role_id = r.id
        and ru.user_id = #{tUserID}
    </select>
</mapper>